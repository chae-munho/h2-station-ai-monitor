<Window x:Class="H2StationAIMonitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:H2StationAIMonitor"
        xmlns:views="clr-namespace:H2StationAIMonitor.Views"
        mc:Ignorable="d"
        Title="H2 Station AI Monitor"
        Height="1120" Width="1920"
        WindowStyle="None"
        ResizeMode="CanResize"
        Background="#3F3F3F">
<Viewbox Stretch="Fill">
    <Grid Background="#3F3F3F">

       
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

       
        <Border Grid.Row="0" Background="#1F1F1F">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

              
                <Border Background="Transparent"
                        MouseLeftButtonDown="Header_MouseLeftButtonDown">
                    <TextBlock Text="H2 Station AI Monitor"
                               Foreground="White"
                               FontSize="16"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"
                               Margin="16,0,0,0"/>
                </Border>

             
                <Button Grid.Column="1"
                        Width="40" Height="40"
                        Margin="0,5,10,5"
                        Background="Transparent"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="CloseButton_Click">
                    <Image Source="/Images/close.png"
                           Width="14" Height="15"
                           Stretch="Fill"/>
                </Button>
            </Grid>
        </Border>

    
        <Grid Grid.Row="1" Background="#3F3F3F">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="190" />
                <RowDefinition Height="20" />
                <RowDefinition Height="817" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="1020" />
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="405" />
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="405" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid Grid.Row="1" Grid.Column="1" Grid.RowSpan="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <views:Cameras />
                <views:Cameras Grid.Column="1" />
                <views:Cameras Grid.Row="1"/>
                <views:Cameras Grid.Row="1" Grid.Column="1" />
            </Grid>

            <views:StationStatus Grid.Row="1" Grid.Column="3" />
            <views:AlertPanel Grid.Row="1" Grid.Column="5" />
            <views:EventLogs Grid.Row="3" Grid.Column="3" Grid.ColumnSpan="3" />
        </Grid>
    </Grid>
</Viewbox>
</Window>
